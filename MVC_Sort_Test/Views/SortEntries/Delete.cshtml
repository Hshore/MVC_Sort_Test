@model MVC_Sort_Test.Models.SortEntry

@{
	ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>

<h3 class="text-center">Are you sure you want to delete this entry?</h3>

<h4 class="text-center">id#@Model.Id</h4>
<hr />
<h5 class="text-center">DateAdded</h5>
<div class="text-center text-break text-wrap">@Model.DateAdded</div>
<h5 class="text-center">OriginalCSV</h5>
<div class="text-center text-break text-wrap">@Model.OriginalCSV</div>
<h5 class="text-center">SortedCSV</h5>
<div class="text-center text-break text-wrap">@Model.SortedCSV</div>


<div class="text-center">
	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-action="Index">Back to List</a>
	</form>
</div>

