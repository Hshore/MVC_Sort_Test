@model MVC_Sort_Test.Models.SortEntry

@{
	ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>
<h3 class="text-center">Are you sure you want to delete this entry?</h3>
<hr />

<div>
	<h5 class="d-inline-block">Id:</h5>
	<p class="text-break text-wrap d-inline-block">@Model.Id</p>
</div>

<div>
	<h5 class="d-inline-block">DateAdded:</h5>
	<p class="text-break text-wrap d-inline-block">@Model.DateAdded</p>
</div>

<div>
	<h5 class="d-inline-block">OriginalCSV:</h5>
	<p class="d-inline-block">
		<a class="" data-bs-toggle="collapse" href="#originalCSV" role="button" aria-expanded="false" aria-controls="originalCSV">
			Show OriginalCSV
		</a>
	</p>
</div>
<div class="text-break text-wrap collapse" id="originalCSV">@Model.OriginalCSV</div>

<div>
	<h5 class="d-inline-block">SortedCSV:</h5>
	<p class="d-inline-block">
		<a class="" data-bs-toggle="collapse" href="#sortedCSV" role="button" aria-expanded="false" aria-controls="sortedCSV">
			Show SortedCSV
		</a>
	</p>
</div>
<div class="text-break text-wrap collapse" id="sortedCSV">@Model.SortedCSV</div>

<div>
	<h5 class="d-inline-block">Sort Direction:</h5>
	<p class="d-inline-block text-break text-wrap">
		@if (Model.SortOrder == 1)
		{
			var s = "Ascending";
			@s

		}
		else
		{
			var s = "Descending";
			@s
		}
	</p>
</div>

<div>
	<h5 class="d-inline-block">Sort Time:</h5>
	<p class="d-inline-block text-break text-wrap">
		@Model.SortTime
	</p>
</div>

<div>
	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a class="btn btn-primary" asp-action="Index">Back to Sorter</a>
	</form>
</div>

